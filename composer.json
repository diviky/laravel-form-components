{
    "name": "diviky/laravel-form-components",
    "description": "Blade components to rapidly build forms with Tailwind CSS Custom Forms and Bootstrap 4.",
    "keywords": [
        "tailwind",
        "tailwindcss",
        "bootstrap",
        "bootstrap4",
        "bootstrap5",
        "bootstrap-4",
        "bootstrap-5",
        "laravel",
        "form",
        "forms",
        "form-builder",
        "form-components",
        "laravel-form-builder",
        "laravel-form-components"
    ],
    "homepage": "https://github.com/diviky/laravel-form-components",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Pascal Baljet",
            "email": "pascal@protone.media",
            "role": "Developer"
        },
        {
            "name": "Sankar Suda",
            "email": "sankar.suda@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^10.0|^11.0",
        "symfony/http-foundation": "^6.0|^7.0"
    },
    "require-dev": {
        "diviky/code-analysis": "^2.0",
        "livewire/livewire": "^3.4",
        "spatie/laravel-translatable": "^6.0",
        "symfony/dom-crawler": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Diviky\\LaravelFormComponents\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Diviky\\LaravelFormComponents\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpro/grumphp": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "Diviky\\LaravelFormComponents\\Providers\\LaravelServiceProvider"
            ]
        }
    }
}
